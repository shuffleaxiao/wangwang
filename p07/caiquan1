#石头1 剪刀2 布3 pc=1 user=input(输入的内容1 2 3)
import random
user=int(input("请你出石头1,剪刀2,布3:"))
pc = random.randint(1,3)
print("电脑出了：%d" % pc)
if pc == 1:
    print("石头")
elif pc == 2:
    print("剪刀")
else:
    print("布")
if (user==1 and pc==2) or (user==2 and pc==3) or (user==3 and pc==1):
    print("你赢了")
elif user == pc:
    print("平局")
else:
    print("你输了")
